load_balance_mode = on

master_slave_mode = on
master_slave_sub_mode = 'stream'

database_redirect_preference_list = 'postgres:0,db:0'

app_name_redirect_preference_list = 'psql:0,citus-master:0'

black_function_list = 'create_distributed_table, master_create_empty_shard, master_append_table_to_shard, master_copy_shard_placement, master_move_shard_placement, master_merge_shards'

failover_command = '/opt/bitnami/pgpool/failover.sh %d %h %p'
